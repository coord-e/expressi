use expressi::expression::Expression;

#[pub]
expression -> Expression
  = sum

sum -> Expression
  = l:product op:$("+" / "-") r:product { Expression::BinOp(op.to_owned(), Box::new(l), Box::new(r)) }
  / product

product -> Expression
  = l:atom op:$("*" / "/") r:atom { Expression::BinOp(op.to_owned(), Box::new(l), Box::new(r)) }
  / atom

atom -> Expression
  = number
  / "(" v:sum ")" { v }

number -> Expression
  = n:$([0-9]+) { Expression::Number(n.parse().unwrap()) }
