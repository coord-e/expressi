use expressi::expression::Expression;

#[pub]
expression -> Expression
  = sum

sum -> Expression
  = l:product "+" r:product { Expression::Sum(Box::new(l), Box::new(r)) }
  / product

product -> Expression
  = l:atom "*" r:atom { Expression::Product(Box::new(l), Box::new(r)) }
  / atom

atom -> Expression
  = number
  / "(" v:sum ")" { v }

number -> Expression
  = n:$([0-9]+) { Expression::Number(n.parse().unwrap()) }
